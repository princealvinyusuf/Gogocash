<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00bd9c"
    tools:context=".InvoicepulsaActivity">

    <!-- Meanmpilkan Teks "Terima Kasih" pada activity Home -->
    <TextView
        android:id="@+id/text"
        android:textSize="35sp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_light"
        android:text="TERIMA KASIH SUDAH MEMILIH KAMI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text2"
        android:textSize="34sp"
        android:gravity="center"
        android:layout_marginTop="170dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="Detail Transaksi Anda:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginLeft="50dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="220dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text3"
            android:textAlignment="viewStart"
            tools:ignore="RtlCompat"
            android:gravity="left"
            android:textSize="24sp"
            android:text="No HP : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="13dp"
            android:layout_weight="1"
            android:textColor="#e94c36"
            android:textStyle="bold"
            />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="13dp"
            android:layout_weight="1"
            android:textColor="#e87f04"
            android:textStyle="bold"
            android:textSize="24sp"
            android:id="@+id/txtHello2"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="50dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="250dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text4"
            android:textAlignment="viewStart"
            android:gravity="left"
            android:textSize="24sp"
            android:text="Harga Pulsa : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="13dp"
            android:layout_weight="1"
            android:textColor="#e94c36"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="27dp"
            android:layout_weight="1"
            android:textColor="#e87f04"
            android:textStyle="bold"
            android:textSize="24sp"
            android:id="@+id/txtHello3"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/text5"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_marginTop="350dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="Detail Invoice Anda Akan Dikirimkan Ke :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Menampilkan Teks "Nama" pada activity Home-->
    <TextView
        android:layout_below="@+id/text2"
        android:id="@+id/name"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_marginTop="230dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="Nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Menampilkan Teks "Email" pada activity Home -->
    <TextView
        android:layout_below="@+id/name"
        android:id="@+id/email"
        android:textSize="25sp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--Menampilkan Teks "Logout" pada object Button di activity Home -->
    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_logout"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="40dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorPrimary"
        android:text="Ookey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>